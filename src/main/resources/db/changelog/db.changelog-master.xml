<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

   <changeSet id="1" author="alex">
      <createTable tableName="request">
         <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
            <constraints primaryKey="true"/>
         </column>
        <column name="uri" type="varchar(256)">
            <constraints nullable="false"/>
        </column>
        <column name="happened_at" type="timestamp">
            <constraints nullable="false"/>
        </column>
        <column name="http_response_code" type="int">
            <constraints nullable="false"/>
        </column>
        <column name="requester_ip_address" type="varchar(64)">
            <constraints nullable="false"/>
        </column>
        <column name="requester_country" type="varchar(128)">
            <constraints nullable="false"/>
        </column>
        <column name="requester_internet_service_provider" type="varchar(128)">
            <constraints nullable="false"/>
        </column>
        <column name="milliseconds_taken_to_complete_request" type="int">
            <constraints nullable="false"/>
        </column>
      </createTable>
   </changeSet>

</databaseChangeLog>